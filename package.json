{
  "name": "electron-angular-boilerplate",
  "version": "0.0.1",
  "description": "Ultra-fast bootstrapping with Electron and Angular",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "start": "run-p renderer:serve main:serve",
    "debug": "run-p renderer:serve \"main:serve -- --inspect-electron\"",
    "main:serve": "node ./main/hmr.js",
    "main:build": "node ./main/esbuild.config.js",
    "renderer:serve": "ng serve --port 5000",
    "renderer:build": "ng build --base-href ./",
    "test": "ng test",
    "build": "ng lint && ng test --watch false && npm run renderer:build && npm run main:build && npm run package",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "ng lint --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "injection-js": "^2.4.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.8",
    "@angular-eslint/builder": "17.1.1",
    "@angular-eslint/eslint-plugin": "17.1.1",
    "@angular-eslint/eslint-plugin-template": "17.1.1",
    "@angular-eslint/schematics": "17.1.1",
    "@angular-eslint/template-parser": "17.1.1",
    "@angular/cli": "^17.0.8",
    "@angular/compiler-cli": "^17.0.0",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "electron": "^28.1.0",
    "esbuild-node-externals": "^1.12.0",
    "esbuild-plugin-clean": "^1.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.1",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.2.2"
  }
}
